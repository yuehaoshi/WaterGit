<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container mb-5 d-inline-block">
    <h1 class='mt-2'>All Cities</h1>
    <h4>Explore all city reviews!</h4>
    <% for (let city of cities){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(city.images.length) {%>
                <img class="img-fluid" alt="" src="<%=city.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= city.title %> </h5>
                    <p class="card-text"><%= city.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= city.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/cities/<%=city._id%>">View Water Experience in <%=city.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const cities = { features: <%- JSON.stringify(cities) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>